doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Lista de productos
    // CSS only
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
  body
    h1.text-center Vista de Productos
    hr
    - let productsListNull = productsList.length === 0;
    |    if productsListNull
    .d-flex.justify-content-center
      .p-5(style='background-color: #3E7FB9; width: fit-content')
        h2 No se encontraron productos
    |      else  
    .container.d-flex.justify-content-center
      |    productsList.map((product, index) => { 
      |     
      table.table.table-dark
        thead
          tr
            th(scope='col') #
            th(scope='col') Nombre
            th(scope='col') Precio
            th(scope='col') Foto
        tbody
          tr
            th(scope='row') #{index + 1} 
            td #{product.inputName}
            td #{product.inputPrice}
            td
              img(src='<%= product.inputPhoto %>' width='100px' height='100px')
      |    } 
    .d-flex.justify-content-center
      button.btn.btn-primary.btn-lg.mt-4.px-5(onclick="window.location.href='/'") Agregar nuevo producto
    // Option 1: Bootstrap Bundle with Popper
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p' crossorigin='anonymous')
