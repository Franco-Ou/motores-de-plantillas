doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Formulario
    // CSS only
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
  body
    h1.text-center Ingrese su producto
    .container.d-flex.justify-content-center
      form(action='/productos' method='post')
        .form-row.mt-4
          .form-group.col-xs-6
            label(for='inputName') Nombre
            input#inputName.form-control(type='text' name='inputName')
        .form-row.mt-4
          .form-group.col-xs-6
            label(for='inputPrice') Precio
            input#inputPrice.form-control(type='number' name='inputPrice')
        .form-row.mt-4
          .form-group.col-xs-6
            label(for='inputPhoto') Foto URL
            input#inputPhoto.form-control(type='text' name='inputPhoto')
        button.btn.btn-primary.btn-lg.mt-4.px-5(type='submit') Enviar
        button.btn.btn-primary.btn-lg.mt-4.px-5(onclick="window.location.href='/productos'") Ver lista de productos
    // Option 1: Bootstrap Bundle with Popper
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p' crossorigin='anonymous')
